// manifest.json
{
  "manifest_version": 3,
  "name": "Tab Cycling Extension",
  "version": "1.0",
  "description": "Cycle through tabs using Ctrl+Shift+Left/Right arrow keys.",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "cycleBackward": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "Cycle through tabs backward"
    },
    "cycleForward": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "Cycle through tabs forward"
    }
  }
}
